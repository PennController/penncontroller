    class LazyString extends String {
        constructor(f){
            if (typeof(f)!="function") throw Error("LazyString's parameter should be a function!");
            super(f());
            Object.defineProperty(this, "value", {get() { return f() }});
            this.type = "Var";
            this._promises = [];
        }
    }
    var GetGroup = () => new LazyString( ()=>Date.now() )
